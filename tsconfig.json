{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": ["es2015"],
		"moduleResolution": "node",
		"outDir": "build",
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true
	},
	"include": ["src/**/*"]
}
